--レッスン日カラムを追加ALTER TABLE	classworkADD 	lesson_date DATE NULL DEFAULT NULL AFTER 	time_table_day_key;	--レッスン日を反映UPDATE	classwork	,time_table_daySET	classwork.lesson_date = time_table_day.lesson_dateWHERE	time_table_day.id = classwork.time_table_day_key	--G21(授業コマ書斎)画面でのinsertでレッスン日カラムを有効にする。INSERT INTO	screen_item(		screen_id		,item_name		,check_bit		,max_length		,event_bit		,authority_control		,authority		,create_datetime		,update_datetime	)VALUES(	'G21'	,'lesson_date'	,8	,0	,9	,3	,20	,NOW()	,NOW())